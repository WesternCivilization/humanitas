<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.diariofilosofico" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Diario Filos√≥fico</name>
    <description>
        Rede Social privada para intelectuais brasileiros.
    </description>
    <author email="rafaelmelo007@gmail.com" href="http://rafaelmelo.web1612.kinghost.net/diariofilosoficoclient/index.html">
        Instituto Leibniz
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="res/icon.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="res/icon.png" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.0.0" />
</widget>
